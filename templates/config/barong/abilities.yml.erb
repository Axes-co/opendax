roles:
  - superadmin
  - admin
  - technical
  - accountant
  - compliance
  - support
<%- if @config.dig('plugins', 'organization', 'enabled') -%>
organization_roles:
  - org-admin
  - org-member
  - org-accountant
  <%= @config.dig('plugins', 'organization', 'extraAbilities', 'roles').to_yaml[3..].gsub(/\n/,"\n  ")[3..-3] -%>
<%- end -%>

admin_permissions:
  superadmin:
    manage:
      - Ability
      - User
      - Level
      - Label
      - Profile
      - Activity
      - APIKey
      - Permission
      - Restriction
      - Document
      <%- if @config.dig('plugins', 'organization', 'enabled') -%>
      - Organization
      <%- end -%>
  admin:
    read:
      - Activity    
    manage:
      - Ability
      - User
      - Level
      - Label
      - Profile
      - APIKey
      - Restriction
      - Document
      <%- if @config.dig('plugins', 'organization', 'enabled') -%>
      - Organization
      <%- end -%>
  technical:
    read:
      - Ability
      - User
      - Level
      - Label
      - Profile
      - Activity
    manage:
      - APIKey
      - Restriction
  accountant:
    read:
      - Ability
      - User
      - Level
      - Label
      - Profile
      - Activity
  compliance:
    read:
      - Ability
      - Document
    manage:
      - User
      - Level
      - Label
      - Profile
  support:
    read:
      - Ability
      - Label
      - Level
      - Profile
      - Activity
    manage:
      - User

<%- if @config.dig('plugins', 'organization', 'enabled') -%>
organization_permissions:
  superadmin:
    manage:
      - AdminSwitchSession
  admin:
    manage:
      - AdminSwitchSession
  member:
    manage:
      - OrganizationSwitchSession
      - SubunitSwitchSession
  org-admin:
    manage:
      - OrganizationSwitchSession
      - SubunitSwitchSession
  org-member:
    manage:
      - SubunitSwitchSession
  org-accountant:
    read:
      - OrganizationSwitchSession
      - SubunitSwitchSession
  <%= @config.dig('plugins', 'organization', 'extraAbilities', 'permissions').to_yaml[3..].gsub(/\n/,"\n  ")[3..-3] %>
<%- end -%>
